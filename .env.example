# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google Cloud Configuration
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
GOOGLE_SPEECH_API_KEY=your_google_speech_api_key_here

# DeepL Configuration (Optional)
DEEPL_API_KEY=your_deepl_api_key_here

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024
MAX_AUDIO_DURATION=30

# Translation Configuration
DEFAULT_SOURCE_LANGUAGE=auto
DEFAULT_TARGET_LANGUAGE=en
TRANSLATION_PROVIDER=google  # google, deepl

# Speech-to-Text Configuration
STT_PROVIDER=openai  # openai, google, local
LOCAL_WHISPER_MODEL=small  # tiny, base, small, medium, large

# Answer Generation Configuration
ANSWER_MAX_LENGTH=150
ANSWER_STYLE=professional  # professional, casual, academic
ANSWER_LANGUAGE=en

# UI Configuration
UI_THEME=dark
UI_OPACITY=0.9
UI_ALWAYS_ON_TOP=true
UI_MINIMIZE_TO_TRAY=true

# Performance Configuration
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=10

# Privacy Configuration
STORE_AUDIO=false
STORE_TRANSCRIPTS=false
ENABLE_ANALYTICS=false
